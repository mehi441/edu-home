@model IEnumerable<WebLayihe.Models.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoBgImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoticeTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(Html.Raw(item.Content))
        </td>
        <td>
            <img src="~/Uploads/@item.Image" alt="@item.Image" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoLink)
        </td>
        <td>
            <img src="~/Uploads/@item.VideoBgImage" alt="@item.VideoBgImage" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoticeTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |

            <a href=" @Url.Action("Delete", "About", new { id=item.Id })" onclick="return confirm('Are you SurE ?' )">Delete</a>

        </td>
    </tr>
}

</table>
