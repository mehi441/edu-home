@model IEnumerable<WebLayihe.Models.Setting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@*setting Index*@

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NavbarPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BgImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Copyright)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FistAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SidebarImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Uploads/@item.Logo" alt="LOgo image " width="133" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NavbarPhone)
        </td>
        <td>
            <img src="~/Uploads/@item.BgImage" alt="back ground image"  width="133"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Copyright)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FistAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <img src="~/Uploads/@item.SidebarImage" alt="sidebar image" width="133" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.Id }) |
            <a href="@Url.Action("Delete", "Setting", new { id=item.Id })" onclick="return confirm(' are u Sure ?? ')">Delete</a>
        </td>
    </tr>
}

</table>
